<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h4>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :acronym %>
    <%= form.text_field :acronym %>
  </div>

  <div class="field">
    <%= image_tag coin.img_url || '', width:35  %>
    <%= form.label :img_url %>
    <%= form.text_field :img_url %>
  </div>

  <div class="field">
    <%= form.label :mining_type %>
    <%= form.select(:mining_type_id, @select_mining_type_options, {include_black: 'Select one option'}) %>
  </div>  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
